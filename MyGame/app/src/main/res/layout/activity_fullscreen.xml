<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/colorPrimary"
                                             android:visibility="visible">
    <Button
            android:text="Graj"
            android:layout_width="304dp"
            android:layout_height="179dp"
            android:id="@+id/play_button" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/play_cloud_button"
            android:textSize="72sp" android:textColor="@android:color/black" android:fontFamily="sans-serif-thin"
            android:layout_marginTop="120dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintHorizontal_bias="0.495"
            android:layout_marginBottom="169dp" app:layout_constraintBottom_toBottomOf="parent"
    />
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/menu"
            android:id="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0"
            android:cropToPadding="true" android:adjustViewBounds="true" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"/>
</android.support.constraint.ConstraintLayout>