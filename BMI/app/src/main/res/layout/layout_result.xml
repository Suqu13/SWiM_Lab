<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:layout_margin="8dp"
                                             android:background="@drawable/border"
                                             android:padding="10dip"
>

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:id="@+id/bmiRate"
            android:textSize="54sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/textView12" android:textAlignment="textEnd"
    />
    <TextView
            android:text="Your BMI:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/bmiRate"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:id="@+id/textView12"
            app:layout_constraintEnd_toStartOf="@+id/guideline2" android:textSize="18sp"
            android:textAlignment="textEnd"
    />
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline2"
                                          android:orientation="vertical" app:layout_constraintGuide_percent="0.41"
    />
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status" app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/bmiRate" android:textSize="14sp" android:textAlignment="textEnd"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0"
            android:layout_marginBottom="16dp"/>
    <TextView
            android:text="Height:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/textView22" android:textSize="12sp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline7" android:layout_marginEnd="16dp"
    />
    <TextView
            android:text="Weight:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView23" android:textSize="14sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView22" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView21" app:layout_constraintVertical_bias="0.523"
            app:layout_constraintEnd_toStartOf="@+id/guideline7" android:layout_marginEnd="16dp"
    />
    <TextView
            android:text="Date: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView21"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline7" android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline6" android:fontFamily="sans-serif-smallcaps"
            android:layout_marginBottom="16dp"
    />
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline6"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="1.0" android:layout_marginEnd="411dp"
                                          app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/height" android:textSize="14sp" app:layout_constraintStart_toEndOf="@+id/textView22"
            android:layout_marginStart="24dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            android:textAlignment="viewStart"
            android:fontFamily="sans-serif-smallcaps"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weight" android:layout_marginStart="24dp"
            app:layout_constraintStart_toEndOf="@+id/textView23"
            android:textSize="14sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/height" android:textAlignment="viewStart"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/date"
    />
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date" android:textSize="14sp"
            android:layout_marginStart="24dp" app:layout_constraintStart_toEndOf="@+id/textView21"
            app:layout_constraintBottom_toTopOf="@+id/guideline6"
            android:layout_marginBottom="16dp"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline7" app:layout_constraintGuide_begin="252dp"
                                          android:orientation="vertical"/>
</android.support.constraint.ConstraintLayout>