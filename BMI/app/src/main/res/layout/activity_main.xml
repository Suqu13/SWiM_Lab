<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".MainActivity"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/backgroundColor"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        android:fillViewport="true"
        android:focusable="true"
        android:focusableInTouchMode="true" android:id="@+id/scrollView3">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/guideline3"
                                              android:orientation="horizontal" app:layout_constraintTop_toTopOf="parent"
                                              android:layout_marginTop="20dp"
                                              app:layout_constraintBottom_toBottomOf="parent"
                                              android:layout_marginBottom="711dp"
                                              app:layout_constraintStart_toStartOf="parent"
                                              app:layout_constraintEnd_toEndOf="parent"
                                              android:layout_marginEnd="411dp"
                                              app:layout_constraintVertical_bias="0.20999998"
                                              app:layout_constraintGuide_percent="0.9"/>
        <android.support.constraint.Guideline android:layout_width="0dp" android:layout_height="0dp"
                                              android:id="@+id/guideline"
                                              android:orientation="horizontal"
                                              app:layout_constraintGuide_percent="0.45"/>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp" app:srcCompat="@drawable/body"
                android:id="@+id/imageView6" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/guideline"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" android:layout_marginBottom="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:background="@android:color/transparent"
                android:scaleType="fitCenter"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/heightNum" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/heightText"
                app:layout_constraintHorizontal_bias="0.0" android:fontFamily="sans-serif-smallcaps"
        />
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/weightNum" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/weightText"
                app:layout_constraintHorizontal_bias="0.0" android:fontFamily="sans-serif-smallcaps"
        />
        <TextView
                android:text="@string/heightCm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/heightText" android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView6"
                android:layout_marginStart="8dp" android:fontFamily="sans-serif-smallcaps"
        />
        <TextView
                android:text="@string/weightKg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/weightText" android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/heightNum"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:fontFamily="sans-serif-smallcaps"
        />
        <Button
                android:text="@string/count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/buttonColor"
                android:id="@+id/countBtn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/guideline3" android:fontFamily="sans-serif-smallcaps"/>
        <android.support.constraint.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/weightNum" android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@+id/countBtn" android:visibility="invisible"
                app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.0"
                android:id="@+id/bmiContainer">
            <TextView
                    android:text="Your BMI:"
                    android:layout_width="wrap_content"
                    android:layout_height="19dp" android:id="@+id/textView"
                    app:layout_constraintBottom_toTopOf="@+id/bmiNumber"
                    app:layout_constraintEnd_toStartOf="@+id/guideline5"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp" android:textSize="18sp"
                    android:fontFamily="sans-serif-smallcaps"/>
            <android.support.constraint.Guideline android:layout_width="wrap_content"
                                                  android:layout_height="wrap_content"
                                                  android:id="@+id/guideline5"
                                                  android:orientation="vertical"
                                                  app:layout_constraintGuide_percent="0.6"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bmiNumber" android:textSize="54sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.502"
                    app:layout_constraintEnd_toStartOf="@+id/guideline5" android:layout_marginEnd="8dp"
                    android:textAlignment="textEnd" android:textStyle="bold" android:fontFamily="sans-serif-smallcaps"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bmiStatus" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/bmiNumber"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.012"
                    app:layout_constraintEnd_toStartOf="@+id/guideline5" android:layout_marginEnd="8dp"
                    android:textAlignment="textEnd" android:fontFamily="sans-serif-smallcaps"
            />
            <ImageButton
                    android:layout_width="72dp"
                    android:layout_height="72sp"
                    android:id="@+id/infoBtn"
                    android:scaleType="fitCenter"
                    style="@android:style/Widget.Holo.Light.ImageButton"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/question_mark"
                    app:layout_constraintVertical_bias="0.504" app:layout_constraintStart_toEndOf="@+id/bmiNumber"
                    android:layout_marginStart="16dp"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</ScrollView>
