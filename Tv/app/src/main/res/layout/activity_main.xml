<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_height="match_parent"
                                             android:layout_width="match_parent"
                                             android:id="@+id/constraint_layout"
                                             android:background="@drawable/space">
    <ImageView
            android:layout_width="240dp"
            android:layout_height="135dp"
            android:id="@+id/image_1"
            android:onClick="onClicked"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/left_margin_32" android:scaleType="centerCrop" android:src="@drawable/raccoon"
            android:layout_marginBottom="@dimen/image_margin_32" app:layout_constraintBottom_toTopOf="@+id/image_2"/>
    <ImageView
            android:onClick="onClicked"
            android:layout_width="240dp"
            android:layout_height="135dp"
            android:id="@+id/image_2"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/left_margin_32" android:src="@drawable/raccoon_tongue"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:onClick="onClicked"
            android:src="@drawable/raccoon_tongue_fluffy"
            android:layout_width="240dp"
            android:layout_height="135dp"
            android:id="@+id/image_3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/left_margin_32" android:layout_marginTop="@dimen/image_margin_32"
            app:layout_constraintTop_toBottomOf="@+id/image_2"/>
    <ImageView
            android:src="@drawable/raccoon_climbing"
            android:layout_width="640dp"
            android:layout_height="360dp"
            android:id="@+id/image_main"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/right_margin_24"/>
    <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

    </FrameLayout>
</android.support.constraint.ConstraintLayout>